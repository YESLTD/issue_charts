<div class='box tabular'>

  <p>
    <%= f.label l(:label_in_the_past_days) %>
    <%= f.text_field :range_integer, :required => true %>
    <%= f.select :range_type, { l(:label_day_plural) => 'days', l(:label_month_plural) => 'months', l(:label_year_plural) => 'years' }, include_blank: false %>
  </p>
  <% unless @chart.predefined? %>
    <p>
      <%= f.label l(:field_group_by) %>
      <% options = standard_fields %>
      <% if @chart.time == 'spent_hours' %>
        <% options.delete(l(:field_created_on)) %>
      <% end %>
      <%= f.select :group_by_field, group_by_field_options(@chart.tracker_id), include_blank: true, :required => true unless (@chart.tracker_id == 0 || !@chart.time.to_s.empty?) %>
      <%= f.select :group_by_field, { l(:field_tracker) => 'tracker' }.merge(options), include_blank: true, :required => true if (@chart.tracker_id == 0 || !@chart.time.to_s.empty?) %>
    </p>
  <% end %>

</div>