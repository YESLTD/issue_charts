<div class='box tabular'>
  <p>
    <%= f.label 'Chart type:' %>
    <%= f.select :chart_type, chart_type_options, { include_blank: true }, :required => true %>
  </p>
  <p>
    <%= f.label 'Group by issue field:' %>
    <%= f.select :group_by_field, group_by_field_options(@chart.tracker_id), include_blank: true unless @chart.tracker_id == 0 %>
    <%= f.select :group_by_field, { 'Tracker' => 'tracker' }.merge(standard_fields), include_blank: true if @chart.tracker_id == 0 %>
  </p>
</div>